{
    "name": "ordnungshub-puppeteer-tests",
    "version": "1.0.0",
    "description": "Human-like automated tests for OrdnungsHub frontend",
    "main": "test-frontend-puppeteer.js",
    "scripts": {
        "test": "node test-frontend-puppeteer.js",
        "test:headless": "node test-frontend-puppeteer.js --headless",
        "install-deps": "npm install puppeteer",
        "health-check": "curl -s http://localhost:8000/health || echo 'Backend not running'",
        "frontend-check": "curl -s http://localhost:5173 || echo 'Frontend not running'"
    },
    "keywords": [
        "puppeteer",
        "testing",
        "automation",
        "frontend",
        "e2e"
    ],
    "author": "OrdnungsHub Testing Suite",
    "license": "MIT",
    "dependencies": {
        "puppeteer": "^24.11.0"
    }
}
